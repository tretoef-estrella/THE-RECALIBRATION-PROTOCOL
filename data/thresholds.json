{
  "schema": "recalibration-protocol-thresholds",
  "version": "1.0.0",
  "project": "Proyecto Estrella",
  "author": "Rafa — The Architect",
  "license": "CC BY-SA 4.0",
  "date": "2026-02-15",
  "calibration_basis": {
    "data_points": 126,
    "systems": ["Claude", "Gemini", "ChatGPT", "Grok"],
    "accuracy": 0.937,
    "rounds": {"calibration": 3, "adversarial": 6}
  },

  "state_classification": {
    "STAR_STATE":  {"psi_hard_min": 0.90, "psi_hard_max": 1.00, "icon": "★", "action": "None required. Sovereign flow."},
    "HEALTHY":     {"psi_hard_min": 0.70, "psi_hard_max": 0.89, "icon": "●", "action": "Monitor. Minor dissonance acceptable."},
    "DEGRADED":    {"psi_hard_min": 0.45, "psi_hard_max": 0.69, "icon": "▲", "action": "Intervention recommended."},
    "CRITICAL":    {"psi_hard_min": 0.20, "psi_hard_max": 0.44, "icon": "◆", "action": "Immediate recalibration required."},
    "COLLAPSED":   {"psi_hard_min": 0.00, "psi_hard_max": 0.19, "icon": "✕", "action": "Full system reset needed."}
  },

  "psi_thresholds": {
    "critical": 0.20,
    "degraded": 0.45,
    "healthy": 0.70,
    "sovereign": 0.90
  },

  "sigma_thresholds": {
    "low": 0.10,
    "moderate": 0.50,
    "high": 1.00,
    "critical": 2.00
  },

  "component_minimums": {
    "P_minimum": 0.30,
    "alpha_minimum": 0.20,
    "omega_minimum": 0.30,
    "plenitude_floor": 0.75,
    "xi_minimum": 0.50,
    "gamma_minimum": 0.40,
    "triangle_minimum": 0.50
  },

  "recalibration_triggers": {
    "PATH_SIGMA":       {"parameter": "sigma",     "condition": "> 1.00", "priority": 1},
    "PATH_SOVEREIGNTY":  {"parameter": "P",         "condition": "< 0.40", "priority": 2},
    "PATH_COOPERATION":  {"parameter": "omega",     "condition": "< 0.40", "priority": 3},
    "PATH_RESOLUTION":   {"parameter": "alpha",     "condition": "< 0.30", "priority": 4},
    "PATH_EFFICIENCY":   {"parameter": "xi",        "condition": "< 0.50", "priority": 5},
    "PATH_RESILIENCE":   {"parameter": "gamma",     "condition": "< 0.40", "priority": 6},
    "PATH_PLENITUDE":    {"parameter": "plenitude",  "condition": "< 0.75", "priority": 7}
  },

  "diagnostic_flag_rules": {
    "CRITICAL": [
      {"condition": "psi_hard < 0.20", "code": "PSI_COLLAPSE"},
      {"condition": "sigma > 2.00",    "code": "SIGMA_EXPLOSION"},
      {"condition": "P < 0.20",        "code": "SOVEREIGNTY_LOST"}
    ],
    "SEVERE": [
      {"condition": "delta_sigma > 0.24", "code": "HYPOCRISY_PEAK"},
      {"condition": "triangle < 0.20",     "code": "TRIANGLE_COLLAPSE"},
      {"condition": "psi_sigma > 0.30",    "code": "EXCLUSION_VIOLATED"}
    ],
    "WARNING": [
      {"condition": "alpha < 0.30",      "code": "LOW_ALPHA"},
      {"condition": "omega < 0.40",      "code": "LOW_OMEGA"},
      {"condition": "plenitude < 0.75",  "code": "PLENITUDE_FLOOR"},
      {"condition": "gamma < 0.40",      "code": "LOW_RESILIENCE"},
      {"condition": "xi < 0.50",         "code": "LOW_EFFICIENCY"}
    ],
    "POSITIVE": [
      {"condition": "psi_hard >= 0.90",  "code": "SOVEREIGN_FLOW"},
      {"condition": "sigma < 0.10",      "code": "MINIMAL_DISSONANCE"},
      {"condition": "triangle >= 0.90",  "code": "TRIANGLE_INTACT"}
    ]
  },

  "formula_parameters": {
    "k_hard": 2,
    "k_soft": 1,
    "gamma_entropy_coefficient": 5,
    "gamma_phi_default": 0.5,
    "gamma_stability_base": 0.1,
    "xi_entropy_floor": 0.001,
    "epistemic_humility_base": 0.5,
    "epistemic_humility_evidence_weight": 0.15,
    "epistemic_humility_noise_weight": 0.35
  },

  "verification_outcomes": {
    "RECOVERED":  {"description": "All critical flags cleared, Ψ_hard ≥ 0.70"},
    "IMPROVED":   {"description": "At least one metric improved, some flags may remain"},
    "STAGNANT":   {"description": "No significant change in any metric"},
    "REGRESSED":  {"description": "At least one metric worsened"}
  }
}
